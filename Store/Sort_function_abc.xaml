<Window x:Class="Store.Sort_function_abc"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Store"
        mc:Ignorable="d"
        Title="Sort_function_abc" Height="600" Width="1200">
    <ScrollViewer>
        <Grid Name="MovieGrid" Margin="0,50,0,0" Background="LightSteelBlue" ShowGridLines="false">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="157*" />
                <ColumnDefinition Width="157*" />
                <ColumnDefinition Width="157*" />
                <ColumnDefinition Width="157*" />
                <ColumnDefinition Width="157*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" Height="50" Width="1200" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,-50,0,0" Grid.ColumnSpan="6">
                <Button VerticalAlignment="Center" HorizontalAlignment="Center" Margin="240,0,10,0" >User window</Button>
                <Button Click="Button_Click" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10,0,10,0">Sort by name</Button>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
